<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="421dp"
            android:layout_height="81dp"
            android:background="#673AB7"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="68dp"
            android:layout_height="650dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="83dp">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="65dp"
            android:layout_height="646dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="85dp"></LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout12"
            android:layout_width="281dp"
            android:layout_height="42dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout7"
            app:layout_constraintStart_toEndOf="@+id/linearLayout6"></LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout9"
            android:layout_width="280dp"
            android:layout_height="77dp"
            android:layout_marginTop="52dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.131">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Conversion de Volumen"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24sp" />
        </LinearLayout>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="221dp"
            android:layout_height="200dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="21dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout11"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout7"
            app:layout_constraintStart_toEndOf="@+id/linearLayout6"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout10">

            <RadioButton
                android:id="@+id/mili"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mililitros" />

            <RadioButton
                android:id="@+id/galo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Galones" />

            <RadioButton
                android:id="@+id/metroCu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Metro Cubico" />

            <RadioButton
                android:id="@+id/pieCu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pies Cubicos" />
        </RadioGroup>

        <Button
            android:id="@+id/convertir"
            android:layout_width="220dp"
            android:layout_height="52dp"
            android:layout_marginStart="27dp"
            android:layout_marginEnd="31dp"
            android:layout_marginBottom="23dp"
            android:text="Convertir"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout12"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout7"
            app:layout_constraintStart_toEndOf="@+id/linearLayout6" />

        <LinearLayout
            android:id="@+id/linearLayout10"
            android:layout_width="281dp"
            android:layout_height="52dp"
            android:layout_marginTop="54dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout9"
            tools:layout_editor_absoluteX="67dp" />

        <LinearLayout
            android:id="@+id/linearLayout13"
            android:layout_width="147dp"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="131dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout7"
            app:layout_constraintStart_toEndOf="@+id/linearLayout6"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout9">

            <EditText
                android:id="@+id/txtvolumen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout11"
            android:layout_width="285dp"
            android:layout_height="69dp"
            android:layout_marginTop="221dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout7"
            app:layout_constraintStart_toEndOf="@+id/linearLayout6"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout10">

            <EditText
                android:id="@+id/txtresultvolumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="126dp"
            android:layout_height="26dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="25dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@+id/linearLayout13"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout9">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Litros"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>